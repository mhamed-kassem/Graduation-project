<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/profile_photo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/doctor"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/header_cover_image"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:paddingBottom="0dp">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_cover"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/coconnextarabic_bold"
                            android:gravity="center"
                            android:text="Sara Alaa Alkurdy"
                            android:textColor="#fff"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/email_cover"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:text="sara@gmail.com"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/profile_properties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <!--<TextView-->
                    <!--android:textColor="@color/colorPrimary"-->
                    <!--android:id="@+id/Email"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="5dp"-->
                    <!--android:fontFamily="@font/coconnextarabic_bold"-->
                    <!--android:text="Email     : "-->
                    <!--android:textSize="20sp"-->
                    <!--android:textStyle="bold" />-->

                    <!--<TextView-->
                    <!--android:textColor="@color/cardview_dark_background"-->
                    <!--android:id="@+id/the_email"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="5dp"-->
                    <!--android:text="Sara Alaa Alkurdy"-->
                    <!--android:textSize="20sp" />-->


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/the_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:editable="false"
                            android:fontFamily="@font/coconnextarabic_bold"
                            android:hint="Email"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@id/HeartRate" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="3px"-->
                <!--android:background="@color/colorPrimary" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/the_gender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:editable="false"
                            android:fontFamily="@font/coconnextarabic_bold"
                            android:hint="Gender"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toTopOf="@id/HeartRate" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/the_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:editable="false"
                            android:fontFamily="@font/coconnextarabic_bold"
                            android:hint="Birthday"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@id/HeartRate" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/the_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:editable="false"
                            android:fontFamily="@font/coconnextarabic_bold"
                            android:hint="Number"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@id/HeartRate" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>





</RelativeLayout>